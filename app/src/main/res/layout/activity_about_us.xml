<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EE7E57C2"
    android:scrollbarSize="10dp"
    android:scrollbarThumbVertical="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="15dp">

            <ImageView
                android:layout_width="168dp"
                android:layout_height="144dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/mdglogo" />

            <TextView
                android:id="@+id/about_us_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginStart="6dp"
                android:paddingTop="20dp"
                android:text="Mobile development group at IIT Roorkee is an active student group directing its efforts towards creating useful mobile applications and promoting tech based learning for the same."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:typeface="sans" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="0dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/git_about_us"
                android:layout_width="72dp"
                android:layout_height="64dp"
                android:padding="10dp"
                android:src="@drawable/github" />

            <ImageView
                android:id="@+id/fb_about_us"
                android:layout_width="72dp"
                android:layout_height="64dp"
                android:padding="10dp"
                android:src="@drawable/facebook_icon" />

            <ImageView
                android:id="@+id/play_about_us"
                android:layout_width="72dp"
                android:layout_height="64dp"
                android:padding="10dp"
                android:src="@drawable/play_store" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>